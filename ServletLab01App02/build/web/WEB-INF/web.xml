<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>Serv</servlet-name>
        <servlet-class>pkg.Serv</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Pagehits</servlet-name>
        <servlet-class>pkg.Pagehits</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>login</servlet-name>
        <servlet-class>pkg.login</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logout</servlet-name>
        <servlet-class>pkg.logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Serv</servlet-name>
        <url-pattern>/Serv</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Pagehits</servlet-name>
        <url-pattern>/Pagehits</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>login</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <listener>
        <listener-class>
            pkg.MyServerListener
        </listener-class>
    </listener>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
